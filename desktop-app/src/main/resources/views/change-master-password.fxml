<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.iftakher.passwordmanager.controllers.ChangeMasterPasswordController"
      spacing="10" style="-fx-padding: 15;">

    <Label text="Change Master Password" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Current password:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <PasswordField fx:id="currentPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="New password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Confirm new password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#handleOk" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>

</VBox>
